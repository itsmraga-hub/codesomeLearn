@page "/lessons"
@using codesome.Shared
@using codesome.Shared.Models
@inject HttpClient Http
@inject NavigationManager _navigator

<PageTitle>Lessons</PageTitle>

<h1>Lessons</h1>

@* <p>This component demonstrates fetching data from the server.</p> *@

@if (lessons == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in lessons)
            {
                <tr>
                    <td>@lesson.Id</td>
                    <td>@lesson.Title</td>
                    <td>@lesson.DurationMinutes</td>
                    <td>@lesson.Content</td>
                </tr>
            }
        </tbody>
    </table>
}